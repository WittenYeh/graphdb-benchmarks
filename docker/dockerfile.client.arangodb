FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install python-arango driver
RUN git clone https://github.com/ArangoDB-Community/python-arango.git /tmp/python-arango \
    && cd /tmp/python-arango \
    && pip install .

RUN pip install --no-cache-dir pandas numpy

CMD ["tail", "-f", "/dev/null"]