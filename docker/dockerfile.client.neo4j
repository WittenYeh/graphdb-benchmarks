# Use newer Python for Neo4j
FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Neo4j Driver (Latest/HEAD works fine on Python 3.11)
RUN git clone https://github.com/neo4j/neo4j-python-driver.git /tmp/neo4j-driver \
    && cd /tmp/neo4j-driver \
    && pip install .

RUN pip install --no-cache-dir pandas numpy

CMD ["tail", "-f", "/dev/null"]